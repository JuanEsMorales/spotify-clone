---
import Time from "@icons/Time.astro";
import { type Song } from "@lib/data";

interface Props {
  songs: Song[];
}
const { songs } = Astro.props;
---

<table class="min-w-full table-auto text-left divide-y divide-gray-600">
  <thead class="text-sm text-gray-400 font-light">
    <tr>
      <th class="pl-4 py-2 font-light">#</th>
      <th class="py-2 font-light">Title</th>
      <th class="py-2 font-light">Album</th>
      <th class="py-2 font-light"><Time /></th>
    </tr>
  </thead>

  <tbody>
    {songs.map((song, index) => (
      <tr class="h-4"></tr>
      <tr class="hover:bg-white/10 hover:shadow-lg transition duration-300">
        <td class="pl-4 py-2 w-max rounded-md rounded-r-none">{index + 1}</td>
        <td class="py-2">
          <div class='flex items-center gap-2 relative overflow-hidden'>
            <picture class='size-12 bg-zinc-800 shadow-lg overflow-hidden flex-none'>
              <img src={song.image} alt={`Cover de ${song.title} por ${song.artists}`} class='object-cover'/>
            </picture>
            <div class='flex flex-col'>
              <h3 class='text-sm font-medium'>{song.title}</h3>
              <p class='text-xs text-zinc-400'>{song.artists.join(', ')}</p>
            </div>
          </div>
        </td>
        <td class="py-2">{song.album}</td>
        <td class="py-2 rounded-md rounded-l-none">{song.duration}</td>
      </tr>
    ))}
  </tbody>

</table>